<%- include ("../partials/header")%>
<div class=" container">
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%=sunsets.name %></h1>
    </div>

<div class="col-xs-12 col-md-6 col-lg-4">
    <form action="/sunsets/<%=sunsets._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
                    <input class="form-control" type="text" name="sunset[name]" id="name" value="<%=sunsets.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="sunset[image}" id="image" value="<%=sunsets.image %>">
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group">
                    
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="sunset[price]" id="price" value="<%=sunsets.price %>" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="sunset[description}" id="description" value="<%=sunsets.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
        
    </form>

</div>
</div>
</div>

<a href="/sunsets">Back</a>
<%- include ("../partials/footer")%>